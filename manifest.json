{
    "manifest_version": 2,
    "name": "GitHub Code Viewer",
    "description": "GitHub Code Viewer",
    "version": "1.0",
    
    "page_action": {
        "default_title": "GitHub Code Viewer"
    },
    "background": { 
        "scripts": ["background.js"] 
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    
    "content_scripts": [{
            "matches": ["https://github.com/*"],
            "css": ["style.css"]
    }]
}